{
	"compilerOptions": {
		"experimentalDecorators": true,
		"jsx": "react",
		"module": "es6",
		"target": "es6",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"incremental": true,
		"downlevelIteration": true,
		"paths": {
			"@/*": ["./src/*", "./lib/*", "./components/*"]
		},
	},
	"include": ["src/**/*.ts", "src/**/*.tsx"],
	"exclude": ["node_modules"]
}
