{
  "name": "chrome-extension-with-react",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/nirazanbasnet/starter-kit-for-building-a-chrome-extension-using-reactjs",
  "author": "Chrome Extension with ReactJs",
  "license": "MIT",
  "scripts": {
    "start": "webpack-dev-server --mode development --open",
    "watch": "webpack --watch --progress --config webpack.config.js",
    "build": "webpack --progress --config webpack.prod.js",
    "lint": "eslint .",
    "lintFixAll": "eslint 'src/**/*.{ts,tsx,js,jsx}' --fix",
    "prettierFixAll": "prettier --write 'src/**/*.{ts,tsx,js,jsx,json,css,scss,md}'",
    "fix:lintPrettier": "npm run prettierFixAll && npm run lintFixAll",
    "tsc": "tsc --noEmit",
    "prepare": "husky",
    "lint-staged": "lint-staged",
    "postinstall": "patch-package"
  },
  "lint-staged": {
    "*.{js,ts,tsx,jsx}": [
      "npm run lint",
      "npm run fix:lintPrettier",
      "git add ."
    ]
  },
  "dependencies": {
    "@react-spring/core": "^9.7.5",
    "@react-spring/shared": "^9.7.5",
    "@react-spring/web": "^9.7.5",
    "@reduxjs/toolkit": "^2.3.0",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.0.3",
    "dotenv-webpack": "^8.0.1",
    "fs": "^0.0.1-security",
    "jsencrypt": "^3.3.2",
    "node-forge": "^1.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^9.1.2",
    "react-router-dom": "^6.28.0",
    "react-spring": "^8.0.27"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.18.6",
    "@babel/plugin-proposal-optional-chaining": "^7.21.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.25.9",
    "@eslint/js": "^9.26.0",
    "@types/chrome": "^0.0.206",
    "@types/crypto-js": "^4.2.2",
    "@types/node-forge": "^1.3.11",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "autoprefixer": "^10.4.13",
    "babel-loader": "^8.2.5",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^6.4.1",
    "css-loader": "^3.6.0",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-native": "^5.0.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^4.5.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "patch-package": "^8.0.0",
    "postcss": "^8.4.20",
    "postcss-loader": "^4.3.0",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "^3.5.3",
    "style-loader": "^2.0.0",
    "tailwindcss": "^3.2.4",
    "ts-loader": "^8.4.0",
    "typescript": "^4.9.4",
    "webpack": "^4.47.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.3",
    "webpack-extension-reloader": "^1.1.4",
    "webpack-merge": "^5.8.0"
  }
}
